---
import { getTeamMembers, getAssetUrl } from '../../lib/directus';
import { getCurrentLanguage, getLocalizedField } from '../../lib/i18n';
import { t } from '../../lib/translations';

// Get current language
const currentLang = getCurrentLanguage(Astro.url);
const heading = await t('team.heading', currentLang, 'TEAM');

// Fetch team members from Directus
const teamMembersData = await getTeamMembers({ featuredOnly: true });

const teamMembers = teamMembersData.length > 0
  ? teamMembersData.map(member => ({
      id: member.id,
      fullName: member.full_name,
      role: getLocalizedField(member, 'role', currentLang) || member.role_en,
      bio: getLocalizedField(member, 'bio', currentLang),
      photo: member.photo ? getAssetUrl(member.photo) : null,
      email: member.email,
      linkedinUrl: member.linkedin_url,
      twitterUrl: member.twitter_url,
      githubUrl: member.github_url,
      slug: member.slug
    }))
  : [];
---

<section id="team-section" class="team-section py-16 md:py-24" aria-labelledby="team-heading">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="mb-12 flex items-center gap-6">
      <h2 id="team-heading" class="text-[12px] sm:text-xs font-mono uppercase text-foreground/70 whitespace-nowrap">
        {heading}
      </h2>
      <div class="h-px flex-1 bg-[var(--color-border)]"></div>
    </div>

    <!-- Team Cards Row -->
    <div id="team-cards-row" class="team-cards-row">
      {teamMembers.map((member, index) => (
        <div 
          class="team-card"
          data-member-index={index}
          tabindex="0"
          role="button"
          aria-label={`View ${member.fullName}'s profile`}
        >
          <!-- Card Inner - this is what flips -->
          <div class="card-inner">
            <!-- Front Side -->
            <div class="card-face card-front">
              <div class="card-image">
                {member.photo ? (
                  <img src={member.photo} alt={member.fullName} loading="lazy" />
                ) : (
                  <div class="card-placeholder">
                    <span>{member.fullName.split(' ').map(n => n[0]).join('')}</span>
                  </div>
                )}
              </div>
              <div class="card-info">
                <p class="card-role">{member.role}</p>
                <h3 class="card-name">{member.fullName}</h3>
              </div>
            </div>

            <!-- Back Side -->
            <div class="card-face card-back">
              <div class="card-back-content">
                <h3 class="card-back-name">{member.fullName}</h3>
                <p class="card-back-role">{member.role}</p>
                {member.bio && <p class="card-back-bio">{member.bio}</p>}
                {(member.linkedinUrl || member.githubUrl || member.email) && (
                  <div class="card-back-links">
                    {member.linkedinUrl && (
                      <a href={member.linkedinUrl} target="_blank" rel="noopener noreferrer" aria-label={`${member.fullName} on LinkedIn`}>
                        <svg viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
                      </a>
                    )}
                    {member.githubUrl && (
                      <a href={member.githubUrl} target="_blank" rel="noopener noreferrer" aria-label={`${member.fullName} on GitHub`}>
                        <svg viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                      </a>
                    )}
                    {member.email && (
                      <a href={`mailto:${member.email}`} aria-label={`Email ${member.fullName}`}>
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
                      </a>
                    )}
                  </div>
                )}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>

  <!-- Backdrop overlay when card is active -->
  <div id="team-backdrop" class="team-backdrop"></div>
</section>

<style>
  /* Section - positioned for z-index context */
  .team-section {
    position: relative;
    z-index: 1;
  }

  .team-section.modal-open {
    z-index: 9999;
  }

  /* Cards Row Container */
  .team-cards-row {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 2rem 0;
    min-height: 450px;
    position: relative;
    max-width: 700px;
    margin: 0 auto;
  }

  /* Cards overlap using negative margin */
  .team-card:not(:first-child) {
    margin-left: -7rem;
  }

  /* Hover dims siblings */
  .team-cards-row:not(.has-active):hover .team-card:not(:hover) {
    filter: brightness(0.6);
  }

  /* Allow horizontal scroll on smaller screens */
  @media (max-width: 768px) {
    .team-cards-row {
      justify-content: flex-start;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      padding-left: 1rem;
      padding-right: 1rem;
      margin-left: -1rem;
      margin-right: -1rem;
      max-width: none;
      scrollbar-width: none;
      -ms-overflow-style: none;
    }
    
    .team-card:not(:first-child) {
      margin-left: -4rem;
    }
    
    .team-cards-row::-webkit-scrollbar {
      display: none;
    }
  }

  /* Individual Card - container for perspective */
  .team-card {
    position: relative;
    flex-shrink: 0;
    width: clamp(240px, 22vw, 300px);
    aspect-ratio: 3 / 4.2;
    cursor: pointer;
    scroll-snap-align: center;
    perspective: 1000px;
    transition: filter 0.3s ease-in-out;
  }

  .team-card:hover {
    z-index: 10;
  }

  .team-card:focus {
    outline: none;
  }

  .team-card:focus-visible {
    outline: 2px solid var(--color-ring);
    outline-offset: 4px;
    border-radius: 12px;
  }

  /* Card Inner - the element that actually flips */
  .card-inner {
    position: absolute;
    inset: 0;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    transform-style: preserve-3d;
  }

  /* Flipped state - rotate the inner container */
  .team-card.flipped .card-inner {
    transform: rotateY(180deg);
  }

  /* Card Faces */
  .card-face {
    position: absolute;
    inset: 0;
    backface-visibility: hidden;
    border-radius: 12px;
    overflow: hidden;
    background: var(--color-card);
    border: 1px solid var(--color-border);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
    display: flex;
    flex-direction: column;
  }

  .card-front {
    transform: rotateY(0deg);
  }

  .card-back {
    transform: rotateY(180deg);
  }

  /* Active State - Card becomes modal */
  .team-card.active {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: min(85vw, 340px);
    height: min(70vh, 480px);
    height: min(70dvh, 480px);
    aspect-ratio: unset;
    z-index: 10001;
    perspective: 1000px;
    filter: none;
    margin: 0;
  }

  .team-card.active .card-inner {
    width: 100%;
    height: 100%;
  }

  .team-card.active.flipped .card-inner {
    transform: rotateY(180deg);
  }

  /* Front Side Content */
  .card-image {
    flex: 1;
    overflow: hidden;
    background: var(--color-muted);
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: grayscale(100%);
    transition: filter 0.4s ease;
  }

  .team-card:hover .card-image img,
  .team-card.active .card-image img {
    filter: grayscale(0%);
  }

  .card-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 3rem;
    font-family: var(--font-display);
    color: var(--color-muted-foreground);
    opacity: 0.3;
  }

  .card-info {
    padding: 1rem 1.25rem;
    border-top: 1px solid var(--color-border);
    flex-shrink: 0;
  }

  .card-role {
    font-size: 0.7rem;
    font-family: var(--font-mono);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-muted-foreground);
    margin: 0 0 0.25rem 0;
  }

  .card-name {
    font-size: clamp(1rem, 2vw, 1.5rem);
    font-family: var(--font-display);
    color: var(--color-foreground);
    margin: 0;
    line-height: 1.2;
  }

  /* Back Side Content */
  .card-back-content {
    padding: 1.25rem;
    height: 100%;
    display: flex;
    flex-direction: column;
    overflow-y: auto;
    overscroll-behavior: contain;
  }

  .card-back-name {
    font-size: clamp(1.25rem, 3vw, 1.75rem);
    font-family: var(--font-display);
    margin: 0 0 0.25rem 0;
    color: var(--color-foreground);
  }

  .card-back-role {
    font-size: 0.75rem;
    font-family: var(--font-mono);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-muted-foreground);
    margin: 0 0 1rem 0;
  }

  .card-back-bio {
    font-size: clamp(0.85rem, 1.5vw, 0.95rem);
    line-height: 1.6;
    color: var(--color-foreground);
    margin: 0;
    flex: 1;
  }

  .card-back-links {
    display: flex;
    gap: 0.75rem;
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid var(--color-border);
  }

  .card-back-links a {
    color: var(--color-muted-foreground);
    transition: color 0.2s ease;
  }

  .card-back-links a:hover {
    color: var(--color-foreground);
  }

  .card-back-links svg {
    width: 1.25rem;
    height: 1.25rem;
  }

  /* Backdrop */
  .team-backdrop {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
    z-index: 10000;
    pointer-events: none;
  }

  .team-backdrop.active {
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
  }

  /* Other cards dimmed when one is active */
  .team-cards-row.has-active .team-card:not(.active) {
    pointer-events: none;
    filter: brightness(0.5);
  }
</style>

<script>
  class TeamCardFlip {
    cards: HTMLElement[];
    backdrop: HTMLElement | null;
    container: HTMLElement | null;
    section: HTMLElement | null;
    activeCard: HTMLElement | null = null;

    constructor() {
      this.cards = Array.from(document.querySelectorAll('.team-card'));
      this.backdrop = document.getElementById('team-backdrop');
      this.container = document.getElementById('team-cards-row');
      this.section = document.getElementById('team-section');
      this.init();
    }

    init() {
      // Card click/keyboard handlers
      this.cards.forEach((card) => {
        card.addEventListener('click', (e) => this.handleCardClick(e, card));
        card.addEventListener('keydown', (e) => {
          if (e.key === 'Enter' || e.key === ' ') {
            e.preventDefault();
            this.handleCardClick(e, card);
          }
        });
      });

      // Backdrop click to close
      this.backdrop?.addEventListener('click', () => this.closeCard());

      // Escape key to close
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && this.activeCard) {
          this.closeCard();
        }
      });
    }

    handleCardClick(e: Event, card: HTMLElement) {
      e.stopPropagation();

      if (this.activeCard === card) {
        // Same card clicked - toggle flip
        if (card.classList.contains('flipped')) {
          card.classList.remove('flipped');
        } else {
          card.classList.add('flipped');
        }
      } else if (this.activeCard) {
        // Different card is active - close it first, then open new one
        this.closeCard();
        setTimeout(() => this.openCard(card), 350);
      } else {
        // No active card - open this one
        this.openCard(card);
      }
    }

    openCard(card: HTMLElement) {
      this.activeCard = card;
      
      // Elevate section z-index
      this.section?.classList.add('modal-open');
      
      // Activate card and backdrop
      card.classList.add('active');
      this.backdrop?.classList.add('active');
      this.container?.classList.add('has-active');

      // Flip after a tiny delay for smooth animation
      requestAnimationFrame(() => {
        card.classList.add('flipped');
      });

      // Lock scroll
      document.body.style.overflow = 'hidden';
    }

    closeCard() {
      if (!this.activeCard) return;

      const card = this.activeCard;

      // Remove flipped first for unflip animation
      card.classList.remove('flipped');

      // After flip animation, remove active state
      setTimeout(() => {
        card.classList.remove('active');
        this.backdrop?.classList.remove('active');
        this.container?.classList.remove('has-active');
        this.section?.classList.remove('modal-open');
        
        // Unlock scroll
        document.body.style.overflow = '';
      }, 300);

      this.activeCard = null;
    }
  }

  // Initialize
  function initTeamCards() {
    new TeamCardFlip();
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initTeamCards);
  } else {
    initTeamCards();
  }

  // Re-initialize on Astro page transitions
  document.addEventListener('astro:page-load', initTeamCards);
</script>
