---
import { getAccessibilitySettings } from "../lib/cms";
import { getCurrentLanguage } from "../lib/i18n";

const currentLang = getCurrentLanguage(Astro.url);
const accessibilitySettings = await getAccessibilitySettings();

const enableSkipLinks = accessibilitySettings?.enable_skip_links ?? false;
const skipLinkText =
  currentLang === "de"
    ? accessibilitySettings?.skip_link_text_de || ""
    : accessibilitySettings?.skip_link_text_en || "";

const skipToNavText =
  currentLang === "de" ? "Zur Navigation springen" : "Skip to navigation";
---

{
  enableSkipLinks && (
    <div class="skip-links">
      <a href="#main-content" class="skip-link">
        {skipLinkText}
      </a>
      <a href="#main-navigation" class="skip-link">
        {skipToNavText}
      </a>
    </div>
  )
}

<style>
  .skip-links {
    position: relative;
    z-index: 9999;
  }

  .skip-link {
    position: absolute;
    left: -9999px;
    top: 0;
    z-index: 9999;
    padding: 1rem 1.5rem;
    background-color: var(--color-primary, #2563eb);
    color: white;
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    border-radius: 0 0 0.375rem 0.375rem;
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
    transition: all 0.2s ease;
  }

  .skip-link:focus {
    left: 1rem;
    outline: 3px solid var(--color-ring, #2563eb);
    outline-offset: 2px;
  }

  .skip-link:hover {
    background-color: var(--color-primary-hover, #1d4ed8);
    transform: translateY(2px);
  }

  .skip-link:active {
    transform: translateY(1px);
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .skip-link {
      transition: none;
    }

    .skip-link:hover,
    .skip-link:active {
      transform: none;
    }
  }
</style>
