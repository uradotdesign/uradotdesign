---
export interface Props {
  heading?: string;
  subheading?: string;
  description?: string;
  items?: Array<{
    text: string;
    icon?: string;
  }>;
  alignment?: 'left' | 'split'; // 'split' for heading on left, content on right
  accentColor?: string;
}

const {
  heading,
  subheading,
  description,
  items = [],
  alignment = "left",
  accentColor = "#10b981",
} = Astro.props;
---

<section
  class="relative py-20 lg:py-32 px-6 sm:px-8 lg:px-12 xl:px-16"
  style={`--section-accent: ${accentColor};`}
  aria-label={heading || subheading || "Service section"}
>
  <div class="max-w-7xl mx-auto">
    {alignment === 'split' ? (
      <!-- Split Layout: Heading left, Content right -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20">
        <!-- Left: Heading & Subheading -->
        <div>
          {heading && (
            <h2 
              class="font-display text-5xl sm:text-6xl lg:text-7xl font-normal leading-tight mb-6"
            >
              {heading}
            </h2>
          )}
          {subheading && (
            <p class="text-xl sm:text-2xl font-light text-foreground/70">
              {subheading}
            </p>
          )}
        </div>

        <!-- Right: Description & Items -->
        <div class="space-y-8 lg:pt-8">
          {description && (
            <p class="text-lg sm:text-xl font-light leading-relaxed">
              {description}
            </p>
          )}

          {items.length > 0 && (
            <ul class="space-y-0" role="list">
              {items.map((item) => (
                <li class="flex items-center gap-3 py-5 group border-b border-foreground/10 last:border-b-0" role="listitem">
                  {/* Checkmark Icon */}
                  <span
                    class="w-5 h-5 rounded-full flex items-center justify-center flex-shrink-0 transition-transform duration-300 group-hover:scale-110 bg-[var(--section-accent)]"
                    aria-hidden="true"
                  >
                    <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="3">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
                    </svg>
                  </span>
                  <span class="text-base sm:text-lg font-light leading-relaxed flex-1">
                    {item.text}
                  </span>
                </li>
              ))}
            </ul>
          )}

          <slot />
        </div>
      </div>
    ) : (
      <!-- Standard Left-aligned Layout -->
      <div class="max-w-4xl">
        {heading && (
          <h2 
            class="font-display text-5xl sm:text-6xl lg:text-7xl font-normal leading-tight mb-6"
          >
            {heading}
          </h2>
        )}
        {subheading && (
          <p class="text-xl sm:text-2xl font-light text-foreground/70 mb-8">
            {subheading}
          </p>
        )}
        {description && (
          <p class="text-lg sm:text-xl font-light leading-relaxed mb-8">
            {description}
          </p>
        )}

        {items.length > 0 && (
          <ul class="space-y-0 mb-8" role="list">
            {items.map((item) => (
              <li class="flex items-center gap-3 py-5 group border-b border-foreground/10 last:border-b-0" role="listitem">
                <span 
                  class="w-5 h-5 rounded-full flex items-center justify-center flex-shrink-0 transition-transform duration-300 group-hover:scale-110 bg-[var(--section-accent)]"
                  aria-hidden="true"
                >
                  <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="3">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
                  </svg>
                </span>
                <span class="text-base sm:text-lg font-light leading-relaxed flex-1">
                  {item.text}
                </span>
              </li>
            ))}
          </ul>
        )}

        <slot />
      </div>
    )}
  </div>
</section>

