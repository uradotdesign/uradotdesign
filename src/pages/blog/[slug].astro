---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getArticles, getArticleBySlug, getAssetUrl } from "../../lib/directus";

export async function getStaticPaths() {
  const articles = await getArticles();
  return articles.map((article) => ({
    params: { slug: article.slug },
  }));
}

const { slug } = Astro.params;
const article = await getArticleBySlug(slug);

if (!article) {
  return Astro.redirect("/404");
}

const featuredImage = article.featured_image
  ? getAssetUrl(article.featured_image)
  : undefined;

const image = featuredImage ?? undefined;
---

<BaseLayout title={article.title} description={article.excerpt} image={image}>
  <article class="article-page">
    <header class="article-header">
      <div class="container">
        <div class="article-meta">
          {
            article.published_date && (
              <time>
                {new Date(article.published_date).toLocaleDateString("en-US", {
                  year: "numeric",
                  month: "long",
                  day: "numeric",
                })}
              </time>
            )
          }
          {
            article.category && (
              <span class="category">{article.category.name}</span>
            )
          }
        </div>
        <h1>{article.title}</h1>
        {article.excerpt && <p class="excerpt">{article.excerpt}</p>}
        {
          article.author && (
            <div class="author-info">
              <div class="author-details">
                <span class="author-name">{article.author.name}</span>
                {article.author.bio && (
                  <span class="author-bio">{article.author.bio}</span>
                )}
              </div>
            </div>
          )
        }
      </div>
    </header>

    {
      featuredImage && (
        <div class="featured-image">
          <img src={featuredImage} alt={article.title} />
        </div>
      )
    }

    <div class="article-content">
      <div class="container">
        <div class="content-wrapper">
          {article.content && <div class="prose" set:html={article.content} />}

          {
            article.tags && article.tags.length > 0 && (
              <div class="tags">
                <h3>Tags</h3>
                <div class="tags-list">
                  {article.tags.map((tag) => (
                    <span class="tag">{tag.name}</span>
                  ))}
                </div>
              </div>
            )
          }
        </div>
      </div>
    </div>

    <div class="article-footer">
      <div class="container">
        <a href="/blog" class="back-link">‚Üê Back to Blog</a>
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  .article-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 4rem 0 3rem;
    text-align: center;
  }

  .article-meta {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 1.5rem;
    font-size: 0.875rem;
    opacity: 0.95;
  }

  .category {
    background: rgba(255, 255, 255, 0.2);
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
  }

  .article-header h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    font-weight: 700;
  }

  .excerpt {
    font-size: 1.25rem;
    max-width: 700px;
    margin: 0 auto 2rem;
    opacity: 0.95;
  }

  .author-info {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }

  .author-details {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .author-name {
    font-weight: 600;
    font-size: 1.125rem;
  }

  .author-bio {
    font-size: 0.875rem;
    opacity: 0.9;
  }

  .featured-image {
    width: 100%;
    max-height: 500px;
    overflow: hidden;
    background: #f0f0f0;
  }

  .featured-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .article-content {
    padding: 4rem 0;
  }

  .content-wrapper {
    max-width: 800px;
    margin: 0 auto;
  }

  .prose {
    line-height: 1.8;
    color: #333;
  }

  .prose :global(h2) {
    font-size: 2rem;
    margin: 2rem 0 1rem;
    color: #1a1a1a;
  }

  .prose :global(h3) {
    font-size: 1.5rem;
    margin: 1.5rem 0 1rem;
    color: #1a1a1a;
  }

  .prose :global(p) {
    margin-bottom: 1.5rem;
  }

  .prose :global(a) {
    color: #667eea;
    text-decoration: none;
    border-bottom: 1px solid #667eea;
    transition: color 0.3s;
  }

  .prose :global(a:hover) {
    color: #764ba2;
  }

  .prose :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 2rem 0;
  }

  .prose :global(blockquote) {
    border-left: 4px solid #667eea;
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: #666;
  }

  .prose :global(code) {
    background: #f5f5f5;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-family: "PP Supply Mono", "Monaco", "Courier New", monospace;
    font-size: 0.9em;
  }

  .prose :global(pre) {
    background: #1a1a1a;
    color: #f5f5f5;
    padding: 1.5rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 2rem 0;
  }

  .prose :global(pre code) {
    background: none;
    padding: 0;
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }

  .prose :global(li) {
    margin-bottom: 0.5rem;
  }

  .tags {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid #e0e0e0;
  }

  .tags h3 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
  }

  .tags-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    background: #f5f5f5;
    color: #666;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.875rem;
  }

  .article-footer {
    padding: 2rem 0 4rem;
  }

  .back-link {
    color: #667eea;
    text-decoration: none;
    font-weight: 600;
    transition: color 0.3s;
    display: inline-flex;
    align-items: center;
  }

  .back-link:hover {
    color: #764ba2;
  }

  @media (max-width: 768px) {
    .article-header h1 {
      font-size: 2rem;
    }

    .excerpt {
      font-size: 1rem;
    }

    .prose :global(h2) {
      font-size: 1.5rem;
    }

    .prose :global(h3) {
      font-size: 1.25rem;
    }
  }
</style>
